doctype html
html
    head
        title Регистрация
        meta(charset = "utf8")
        meta(name = 'descripton' content = 'Описание страницы')
        mets(name = 'viewport' content = 'width = device-width, initial-scale = 1.0')
        meta(http-equiv = 'X-UA-Compatible' content = 'IE=Edge')
        link(rel="stylesheet" href="style.css")
        style(type = "text/css").
          body{
            margin:0;
            background: #f6f8fa;
          }
          *{
            font-family:"consolas";
          }
          .registration_block {
            background: #C4D2F9;
            width: 35%;
            height: 530px;
            display: flex;
            justify-content:center;
            align-items: center;
            flex-direction:column;
            margin:100px auto;
            border:2px #96ADF3 solid;
            border-radius:5px;
          }       
          input {
            width:370px;
            height:20px;
            decoration: none;
            margin-bottom: 15px;
          }
          .register_btn{
            width:200px;
            height:30px;
            display:flex;
            justify-content:center;
            align-self:center;
            margin-top:5px;
            font-size:1em;
            border:2px #96ADF3 solid;
            border-radius:2px;
            background:white;
            outline:none;
            cursor: pointer;
          }
          a{
            text-decoration:none;
            color:black;
          }
          .register_form {
            width:390px;
            display: flex;
            align-items: start;
            flex-direction:column;
          }
          .register_title{
            margin-top: 0px;
          }
          .main_nav{
            width:100%;
            height:100px;
            background:#C4D2F9;
          }
          .menubar{
            margin:0px auto;
            width:70%;
            height:30px;
            display:flex;
            justify-content:space-between;
          }
          
          .register_link{
            font-size:17px;
            text-decoration:underline;
          }
        
    body
      .main_nav
        .logo 
        .menubar
          a(href="/") Главная
          a(href="#") Профиль
          a(href="#") Задачи
          a(href="#") Листы
          a(href="#") Папки
      .registration_block
        h1(class = "register_title") Регистрация
        form(class = "register_form" action="" method="POST")
          label Фамилия
          input(name="surname")
          label Имя
          input(name="name")
          label Отчество
          input(name="patronymic")
          label Пароль
          input(name="password" type="password")
          label Электронная почта
          input(name="email" type="email") 
          label Телефон
          input(name="telephone" type="tel") 
          input(class="register_btn" type="submit" value="Отправить")    
        a(class = "register_link" href="./users") Уже зарегистрирован
      .footer
        .menubar
          a(href="/") Главная
          a(href="#") Профиль
          a(href="#") Задачи
          a(href="#") Листы
          a(href="#") Папки
        h3(class = "footer_year") 2020


      
        
      
      
